
<h1><%= @game.name %></h1>

<table class="games-table">
  <thead>
    <tr>
      <th><form action="/games/<%=@game.id%>/delete" method="POST">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete Game" id="submit">
      </form></th>
      <th><form action="/games/<%=@game.id%>/edit" method="GET">
        <input type="submit" value="Edit Game" id="submit">
      </form></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Console</td>
      <td><%= @game.console.name if @game.console%></td>
    </tr>
    <tr>
      <td>Genre</td>
      <td><%= @game.genre %></td>
    </tr>
    <tr>
      <td>Info</td>
      <td><%= @game.info %></td>
    </tr>
  </tbody>
</table>
